<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.bashi.Debt">

    <TextView
        android:id="@+id/debttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Your current debt + 10% interest to be paid back in a month time is"
        />
    <Button
        android:id="@+id/debtbutton"
        android:layout_below="@id/debttext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="Tap to pay back loan"
        android:onClick="payLoan"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle.Inverse" />


    />

</LinearLayout>
