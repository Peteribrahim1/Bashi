<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="19dp"
    android:orientation="vertical"
    android:background="@drawable/austi"
    tools:context="com.example.hp.bashi.CreateAccountActivity">
    <EditText
        android:id="@+id/create_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="lastname"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        />
    <EditText
        android:layout_below="@id/create_last_name"
        android:id="@+id/create_other_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="othernames"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />
    <EditText
        android:layout_below="@id/create_other_name"
        android:id="@+id/create_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="occupation"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />
    <EditText
        android:layout_below="@id/create_occupation"
        android:id="@+id/create_State"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Average monthly income"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />
    <EditText
        android:layout_below="@id/create_State"
        android:id="@+id/create_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="email"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />
    <EditText
        android:layout_below="@id/create_email"
        android:id="@+id/create_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        android:hint="password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />

    <EditText
        android:layout_below="@id/create_password"
        android:id="@+id/create_password_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        android:hint="repeat password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"

        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Agree to terms?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />
        <CheckBox
            android:id="@+id/term_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="read terms and condition"
            android:onClick="readTerms"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_below="@id/create_password_repeat"
        android:id="@+id/create_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="createAccount"
        android:text="Submit"
        android:background="#3799ef"
        android:textColor="#ffffff"
        />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
